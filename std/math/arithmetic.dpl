#include <cast.dpl>

fn mod(x: float, y: float): float {
	if (y == 0.0) {
		exception("Division by zero", 1);
	}
	
	let result: float = x - (y * inttof(floor(x / y)));
	if (result < 0.0) {
		result += y;
	}
	return result;
}

fn fabs(x: float): float {
	// Return the absolute value of x
	if (x < 0.0) {
		return -x;
	}
	return x;
}

fn iabs(x: int): int {
	// Return the absolute value of x
	if (x < 0) {
		return -x;
	}
	return x;
}